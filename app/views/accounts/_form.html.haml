= form_for @account do |f|
  -if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :api_key 
    = f.text_field :api_key, :size => 40
    %div
      %small
        %em
          This is 
          %strong not 
          your password, you can get yours
          = link_to "here", "http://www.ravelry.com/help/api"
  .actions
    = f.submit 'Save'

  %br
